# Environment variables for production deployment
# Copy this file to .env and set appropriate values

# Flask Configuration
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-here-minimum-32-characters-long
JWT_SECRET_KEY=your-jwt-secret-key-here-minimum-32-characters-long
JWT_EXPIRES_DAYS=30

# Server Configuration
HOST=127.0.0.1
PORT=8080

# Database Configuration
DATABASE_PATH=/opt/workout-tracker/data/workout.db

# Cloudflare Tunnel Configuration (optional)
CLOUDFLARE_TUNNEL_TOKEN=your-cloudflare-tunnel-token-here

# Log Configuration
LOG_LEVEL=INFO
LOG_FILE=/opt/workout-tracker/logs/app.log

# Backup Configuration
BACKUP_PATH=/opt/workout-tracker/backups
BACKUP_RETENTION_DAYS=30
